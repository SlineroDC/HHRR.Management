@model HHRR.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        darkMode: 'class',
        theme: {
            extend: {
                colors: {
                    gray: {
                        900: '#111827',
                        800: '#1f2937',
                        700: '#374151',
                        600: '#4b5563'
                    }
                }
            }
        }
    }
</script>

<div class="min-h-screen bg-gray-900 text-gray-100 p-8 font-sans">
    
    <div class="flex justify-between items-center mb-10 border-b border-gray-800 pb-6">
        <div>
            <h1 class="text-4xl font-extrabold text-white tracking-tight">HR Dashboard</h1>
            <p class="text-gray-400 mt-1">TalentoPlus Administration Panel</p>
        </div>
        <div class="flex items-center gap-4">
            <a asp-controller="Employees" asp-action="Index" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg font-medium transition duration-200 flex items-center gap-2 shadow-lg shadow-blue-900/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Manage Employees
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-5 py-2.5 rounded-lg font-medium transition duration-200 flex items-center gap-2 shadow-lg shadow-red-900/20">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Logout
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-xl relative overflow-hidden group hover:border-blue-500/50 transition duration-300">
            <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <h3 class="text-gray-400 text-sm font-semibold uppercase tracking-wider">Total Employees</h3>
            <p class="text-5xl font-bold text-white mt-2">@Model.TotalEmployees</p>
            <p class="text-gray-500 text-xs mt-2">Registered in database</p>
        </div>

        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-xl relative overflow-hidden group hover:border-emerald-500/50 transition duration-300">
             <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="text-emerald-400 text-sm font-semibold uppercase tracking-wider">Active Status</h3>
            <p class="text-5xl font-bold text-white mt-2">@Model.ActiveEmployees</p>
            <p class="text-gray-500 text-xs mt-2">Currently working</p>
        </div>

        <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-xl relative overflow-hidden group hover:border-purple-500/50 transition duration-300">
             <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <h3 class="text-purple-400 text-sm font-semibold uppercase tracking-wider">Departments</h3>
            <p class="text-5xl font-bold text-white mt-2">@Model.DepartmentsCount</p>
            <p class="text-gray-500 text-xs mt-2">Organizational units</p>
        </div>
    </div>

    <div class="max-w-4xl mx-auto">
        <div class="bg-gray-800 rounded-2xl border border-gray-700 shadow-2xl overflow-hidden">
            <div class="p-6 border-b border-gray-700 bg-gradient-to-r from-gray-800 to-gray-900 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-blue-600/20 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2a1 1 0 0 1 1 1v2.22c3.08.55 5.22 3.1 5.22 5.98v1a1 1 0 0 1-2 0V11.2c0-2.43-1.63-4.52-4.22-5.06V21a1 1 0 0 1-2 0V6.14c-2.59.54-4.22 2.63-4.22 5.06v1a1 1 0 0 1-2 0v-1c0-2.88 2.14-5.43 5.22-5.98V3a1 1 0 0 1 1-1z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-bold text-white">Gemini AI Assistant</h2>
                        <p class="text-xs text-gray-400">Powered by Google</p>
                    </div>
                </div>
                <span class="px-3 py-1 bg-green-500/10 text-green-400 text-xs rounded-full border border-green-500/20">Online</span>
            </div>
            
            <div class="p-6 bg-gray-900/50">
                <div id="aiResponse" class="hidden mb-6">
                    <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 text-gray-200 leading-relaxed shadow-inner">
                        </div>
                </div>

                <div class="relative">
                    <input type="text" id="userQuestion" 
                           class="w-full bg-gray-900 border border-gray-600 text-white rounded-xl px-5 py-4 pr-32 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all shadow-sm placeholder-gray-500"
                           placeholder="Ex: How many employees are in Technology?" 
                           onkeypress="handleKeyPress(event)" />
                    
                    <button onclick="askGemini()" id="btnAsk"
                            class="absolute right-2 top-2 bottom-2 bg-blue-600 hover:bg-blue-700 text-white px-6 rounded-lg font-medium transition duration-200 flex items-center justify-center min-w-[100px]">
                        Ask AI
                    </button>
                </div>
                <p class="text-xs text-gray-500 mt-3 text-center">
                    The AI analyzes real-time database records to answer your questions.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    function handleKeyPress(e) {
        if (e.key === 'Enter') {
            askGemini();
        }
    }

    async function askGemini() {
        const questionInput = document.getElementById('userQuestion');
        const responseDiv = document.getElementById('aiResponse');
        const responseContent = responseDiv.firstElementChild; // The inner div
        const btn = document.getElementById('btnAsk');
        const question = questionInput.value;

        if (!question.trim()) return;

        // UI Loading State
        btn.disabled = true;
        btn.innerHTML = `
            <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        `;
        
        responseDiv.classList.remove('hidden');
        responseContent.innerHTML = '<span class="text-gray-400 italic animate-pulse">Analyzing database...</span>';

        try {
            const res = await fetch('/Home/AskAI', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ question: question })
            });

            if (!res.ok) throw new Error("Server error");

            const data = await res.json();
            
            // Format Response
            responseContent.innerHTML = `
                <div class="flex gap-3">
                    <div class="mt-1 flex-shrink-0">
                        <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-xs font-bold">AI</div>
                    </div>
                    <div>
                        <p class="font-bold text-blue-400 text-sm mb-1">Gemini Answer:</p>
                        <p class="text-gray-300">${data.answer}</p>
                    </div>
                </div>
            `;
        } catch (error) {
            responseContent.innerHTML = `
                <div class="text-red-400 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    Failed to connect to AI service.
                </div>`;
        } finally {
            btn.disabled = false;
            btn.innerHTML = "Ask AI";
            questionInput.focus();
        }
    }
</script>