<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentoPlus</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/js/tailwind-config.js"></script>
</head>
<body class="bg-gray-900 text-gray-100 font-sans antialiased">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-800 border-r border-gray-700 flex flex-col">
            <div class="p-6 border-b border-gray-700">
                <a class="text-2xl font-bold text-white tracking-tight" asp-area="" asp-controller="Home" asp-action="Index">
                    Talento<span class="text-blue-500">Plus</span>
                </a>
            </div>
            <nav class="flex-grow p-4 space-y-2">
                <a asp-controller="Home" asp-action="Index" class="block px-4 py-2 rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                    Dashboard
                </a>
                <a asp-controller="Employees" asp-action="Index" class="block px-4 py-2 rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                    Employees
                </a>
            </nav>
            <div class="p-4 border-t border-gray-700">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="mb-4 px-4 text-sm text-gray-400">
                        Signed in as <br />
                        <span class="text-white font-medium">@User.Identity.Name</span>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md transition-colors text-sm font-medium">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors text-sm font-medium">
                        Login
                    </a>
                }
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow flex flex-col">
            <header class="bg-gray-800 border-b border-gray-700 shadow-sm py-4 px-8 flex justify-between items-center">
                <h1 class="text-xl font-semibold text-white">@ViewData["Title"]</h1>
                <!-- Top bar actions if needed -->
            </header>
            <div class="flex-grow p-8 overflow-auto">
                @RenderBody()
            </div>
            <footer class="bg-gray-800 border-t border-gray-700 py-4 px-8 text-center text-gray-500 text-sm">
                &copy; 2025 - TalentoPlus S.A.S.
            </footer>
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
