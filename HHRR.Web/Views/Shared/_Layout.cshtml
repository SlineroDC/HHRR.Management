<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentoPlus</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        gray: {
                            900: '#111827',
                            800: '#1f2937',
                            700: '#374151',
                            600: '#4b5563',
                            500: '#6b7280',
                            400: '#9ca3af',
                            300: '#d1d5db',
                            200: '#e5e7eb',
                            100: '#f3f4f6',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-900 text-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
        <aside class="w-64 bg-gray-800 border-r border-gray-700 flex flex-col fixed h-full z-20">
            <div class="p-6 border-b border-gray-700">
                <a class="text-2xl font-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    Talento<span class="text-blue-500">Plus</span>
                </a>
            </div>
            
            <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
                
                @if (User.IsInRole("Admin"))
                {
                    <div class="mb-4">
                        <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Administration</p>
                        <a asp-controller="Home" asp-action="Index" 
                           class="flex items-center gap-3 px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg transition font-medium">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Dashboard
                        </a>
                        <a asp-controller="Employees" asp-action="Index" 
                           class="flex items-center gap-3 px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg transition font-medium">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            Employees
                        </a>
                    </div>
                }

                <div>
                    <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">My Workspace</p>
                    <a asp-controller="EmployeePortal" asp-action="Me" 
                       class="flex items-center gap-3 px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg transition font-medium">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        My Profile
                    </a>
                </div>

            </nav>
            
            <div class="p-4 border-t border-gray-700 bg-gray-800">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="mb-3 px-4 py-2 bg-gray-700/50 rounded-lg border border-gray-700">
                        <p class="text-xs text-gray-400">Signed in as</p>
                        <p class="text-sm font-semibold text-white truncate" title="@User.Identity.Name">@User.Identity.Name</p>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="w-full px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition shadow-lg flex justify-center items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="block w-full px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-center font-medium rounded-lg transition shadow-lg">
                        Login
                    </a>
                }
            </div>
        </aside>

        <main class="flex-1 flex flex-col bg-gray-900 ml-64 min-w-0">
            <div class="flex-1">
                @RenderBody()
            </div>
            <footer class="p-4 border-t border-gray-800 text-center text-gray-500 text-sm">
                &copy; 2025 - TalentoPlus S.A.S.
            </footer>
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>