@model HHRR.Web.Models.RegisterEmployeeViewModel

@{
    ViewData["Title"] = "Register Employee";
    Layout = null; // Usamos layout null para que sea una página independiente como el Login
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentoPlus</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        gray: {
                            900: '#111827',
                            800: '#1f2937',
                            700: '#374151',
                            600: '#4b5563'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-900 text-gray-100 font-sans antialiased min-h-screen flex items-center justify-center p-4">

    <div class="w-full max-w-md bg-gray-800 rounded-xl shadow-2xl border border-gray-700 overflow-hidden">
        
        <div class="p-8 text-center border-b border-gray-700">
            <h1 class="text-3xl font-bold text-white tracking-tight">
                Talento<span class="text-blue-500">Plus</span>
            </h1>
            <h2 class="mt-2 text-xl font-semibold text-gray-300">Employee Registration</h2>
            <p class="text-sm text-gray-400 mt-1">Create your account to access the portal</p>
        </div>

        <div class="p-8">
            <form asp-action="RegisterEmployee" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm text-center bg-red-900/20 p-2 rounded border border-red-500/20"></div>

                <div class="space-y-2">
                    <label asp-for="Name" class="block text-sm font-medium text-gray-300">Full Name</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <input asp-for="Name" class="w-full pl-10 bg-gray-900 border border-gray-600 text-white rounded-lg px-4 py-2.5 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition placeholder-gray-500" placeholder="John Doe" />
                    </div>
                    <span asp-validation-for="Name" class="text-xs text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300">Email Address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                            </svg>
                        </div>
                        <input asp-for="Email" type="email" class="w-full pl-10 bg-gray-900 border border-gray-600 text-white rounded-lg px-4 py-2.5 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition placeholder-gray-500" placeholder="you@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-xs text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <input asp-for="Password" type="password" class="w-full pl-10 bg-gray-900 border border-gray-600 text-white rounded-lg px-4 py-2.5 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition placeholder-gray-500" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-xs text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-300">Confirm Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <input asp-for="ConfirmPassword" type="password" class="w-full pl-10 bg-gray-900 border border-gray-600 text-white rounded-lg px-4 py-2.5 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition placeholder-gray-500" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-xs text-red-400"></span>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 shadow-lg shadow-blue-900/30 flex justify-center items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                    Register Account
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-400">
                    Already have an account? 
                    <a asp-action="Login" class="text-blue-400 hover:text-blue-300 font-medium transition">
                        Sign in here
                    </a>
                </p>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>