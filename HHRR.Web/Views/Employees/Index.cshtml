@model IEnumerable<HHRR.Core.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="mb-8 flex justify-between items-center">
    <div>
        <h2 class="text-2xl font-bold text-white">Employee Management</h2>
        <p class="text-gray-400 text-sm mt-1">Manage your workforce and import data.</p>
    </div>
    
    <!-- Import Form -->
    <form asp-action="Import" asp-controller="Employees" method="post" enctype="multipart/form-data" class="flex items-center space-x-2 bg-gray-800 p-2 rounded-lg border border-gray-700">
        <input type="file" name="file" accept=".xlsx" class="block w-full text-sm text-gray-400
            file:mr-4 file:py-2 file:px-4
            file:rounded-md file:border-0
            file:text-sm file:font-semibold
            file:bg-gray-700 file:text-white
            hover:file:bg-gray-600
        "/>
        <button type="submit" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-medium rounded-md transition-colors shadow-sm">
            Import Excel
        </button>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-4 p-4 bg-emerald-900/30 border border-emerald-800 text-emerald-200 rounded-md">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-4 p-4 bg-red-900/30 border border-red-800 text-red-200 rounded-md">
        @TempData["ErrorMessage"]
    </div>
}

<div class="bg-gray-800 rounded-lg shadow-lg border border-gray-700 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-900 text-gray-400 uppercase text-xs font-semibold tracking-wider">
                    <th class="px-6 py-4 border-b border-gray-700">Name</th>
                    <th class="px-6 py-4 border-b border-gray-700">Email</th>
                    <th class="px-6 py-4 border-b border-gray-700">Job Title</th>
                    <th class="px-6 py-4 border-b border-gray-700">Department</th>
                    <th class="px-6 py-4 border-b border-gray-700">Status</th>
                    <th class="px-6 py-4 border-b border-gray-700 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-750 transition-colors even:bg-gray-800/50">
                        <td class="px-6 py-4 text-white font-medium">@item.Name</td>
                        <td class="px-6 py-4 text-gray-300">@item.Email</td>
                        <td class="px-6 py-4 text-gray-300">@item.JobTitle</td>
                        <td class="px-6 py-4 text-gray-300">@item.Department?.Name</td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                @(item.Status == HHRR.Core.Enums.Status.Active ? "bg-emerald-900 text-emerald-200" : 
                                  item.Status == HHRR.Core.Enums.Status.Inactive ? "bg-red-900 text-red-200" : "bg-yellow-900 text-yellow-200")">
                                @item.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right space-x-2">
                            <a href="#" class="text-blue-400 hover:text-blue-300 transition-colors" title="Edit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                            <a href="#" class="text-red-400 hover:text-red-300 transition-colors" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </a>
                            <a href="/api/Employees/@item.Id/pdf" target="_blank" class="text-gray-400 hover:text-white transition-colors" title="Download PDF">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
