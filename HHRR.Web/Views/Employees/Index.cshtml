@model IEnumerable<HHRR.Core.Entities.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="p-6 md:p-10">
    
    <div class="max-w-7xl mx-auto">
        
        <div class="mb-8 flex flex-col md:flex-row justify-between items-end border-b border-gray-800 pb-6 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-white tracking-tight">Employees</h1>
                <p class="text-gray-400 mt-1">TalentoPlus Official Directory</p>
            </div>
            
            <div class="flex gap-2">
                <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg text-white transition flex items-center gap-2 font-medium shadow-lg shadow-blue-900/20 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create New
                </a>
                <a asp-controller="Home" asp-action="Index" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg text-white transition flex items-center gap-2 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Dashboard
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-500/10 border border-green-500 text-green-400 p-4 rounded-lg mb-6 text-sm font-medium flex items-center gap-2">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-500/10 border border-red-500 text-red-400 p-4 rounded-lg mb-6 text-sm font-medium flex items-center gap-2">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                @TempData["Error"]
            </div>
        }

        <div class="mb-8 bg-gray-800 p-6 rounded-xl border border-gray-700 shadow-xl">
            <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                ðŸ“‚ Import Employees (Excel)
            </h2>
            <div class="flex flex-col sm:flex-row gap-4 items-center justify-between">
                <form asp-action="Upload" method="post" enctype="multipart/form-data" class="flex flex-col sm:flex-row gap-4 items-center w-full">
                    <input type="file" name="excelFile" accept=".xlsx" 
                           class="block w-full text-sm text-gray-400 
                                  file:mr-4 file:py-2 file:px-4 
                                  file:rounded-lg file:border-0 
                                  file:text-sm file:font-semibold 
                                  file:bg-blue-600 file:text-white 
                                  hover:file:bg-blue-700 
                                  cursor-pointer bg-gray-900 rounded-lg border border-gray-600 focus:outline-none focus:border-blue-500 transition" 
                           required />
                    
                    <button type="submit" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition shadow-lg shadow-blue-900/20 whitespace-nowrap flex justify-center items-center gap-2 text-sm h-10">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                        </svg>
                        Upload
                    </button>
                </form>
                
                <button onclick="document.getElementById('helpModal').classList.remove('hidden');document.getElementById('helpModal').classList.add('flex');" class="text-gray-400 hover:text-white transition flex items-center gap-1 text-sm font-medium whitespace-nowrap">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Template Help
                </button>
            </div>
        </div>

        <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden shadow-xl mt-6">
            <div class="overflow-x-auto">
                <table class="min-w-full text-left border-collapse"> <thead class="bg-gray-900 text-gray-400 uppercase text-xs tracking-wider border-b border-gray-700">
                        <tr>
                            <th class="px-6 py-4 font-semibold">Employee</th>
                            <th class="px-6 py-4 font-semibold">Job Title</th>
                            <th class="px-6 py-4 font-semibold">Department</th>
                            <th class="px-6 py-4 font-semibold">Salary</th>
                            <th class="px-6 py-4 text-center font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700 text-gray-300"> @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-700/50 transition duration-150">
                                <td class="px-6 py-4">
                                    <div class="font-bold text-white text-sm">@item.Name</div>
                                    <div class="text-xs text-gray-500">@item.Email</div>
                                </td>
                                <td class="px-6 py-4 text-sm">@item.JobTitle</td>
                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-1 bg-gray-700 rounded-md text-xs font-medium text-gray-300 border border-gray-600">
                                        @(item.Department?.Name ?? "N/A")
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-emerald-400 font-mono text-sm font-semibold">
                                    @item.Salary.ToString("C0")
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center justify-center gap-3">
                                        
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-300 transition p-1 hover:bg-blue-900/20 rounded" title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Delete employee?');" class="inline">
                                            <button type="submit" class="text-red-400 hover:text-red-300 transition p-1 hover:bg-red-900/20 rounded" title="Delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>

                                        <a asp-action="DownloadCv" asp-route-id="@item.Id" target="_blank" class="text-gray-400 hover:text-white transition p-1 hover:bg-gray-700 rounded" title="Download CV">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="p-12 text-center text-gray-500 flex flex-col items-center">
                    <p class="text-lg font-medium">No employees found.</p>
                </div>
            }
        </div>
    </div>
</div>

<div id="helpModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50 backdrop-blur-sm p-4">
    <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-2xl max-w-lg w-full p-6">
        <div class="flex justify-between items-center mb-4 border-b border-gray-700 pb-4">
            <h3 class="text-xl font-bold text-white">Excel Guide</h3>
            <button onclick="document.getElementById('helpModal').classList.add('hidden');document.getElementById('helpModal').classList.remove('flex');" class="text-gray-400 hover:text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div class="text-gray-300 text-sm space-y-2">
            <p>Columns: <strong>Name, Email, JobTitle, Salary, Date, Dept</strong></p>
            <p class="text-xs text-gray-500">Ensure 'Dept' matches existing Departments exactly.</p>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        @if (TempData["Success"] != null) { <text>Swal.fire({ icon: 'success', title: 'Success', text: '@TempData["Success"]', background: '#1f2937', color: '#fff', confirmButtonColor: '#2563eb' });</text> }
        @if (TempData["Error"] != null) { <text>Swal.fire({ icon: 'error', title: 'Error', text: '@TempData["Error"]', background: '#1f2937', color: '#fff', confirmButtonColor: '#dc2626' });</text> }
    });
</script>