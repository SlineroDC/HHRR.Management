@model IEnumerable<HHRR.Core.Entities.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        darkMode: 'class',
        theme: {
            extend: {
                colors: {
                    gray: {
                        900: '#111827',
                        800: '#1f2937',
                        700: '#374151',
                        600: '#4b5563'
                    }
                }
            }
        }
    }
</script>

<style>
    /* Fallback for Dark Mode if Tailwind fails */
    body { background-color: #111827; color: #f3f4f6; }
    .bg-gray-800 { background-color: #1f2937; }
    .bg-gray-900 { background-color: #111827; }
    .text-white { color: #ffffff; }
    .text-gray-400 { color: #9ca3af; }
    .border-gray-700 { border-color: #374151; }
</style>

<div class="min-h-screen bg-gray-900 text-gray-100 p-8 font-sans">
    
    <div class="mb-8 flex justify-between items-end border-b border-gray-800 pb-6">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Employees</h1>
            <p class="text-gray-400 mt-1">TalentoPlus Official Directory</p>
        </div>
        
        <div class="flex gap-2">
            <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg text-white transition flex items-center gap-2 font-medium shadow-lg shadow-blue-900/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create New Employee
            </a>
            <a asp-controller="Home" asp-action="Index" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg text-white transition flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-500/10 border border-green-500 text-green-400 p-4 rounded-lg mb-6 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-500/10 border border-red-500 text-red-400 p-4 rounded-lg mb-6 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            @TempData["Error"]
        </div>
    }

        <h2 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            ðŸ“‚ Import Employees (Excel)
        </h2>
        <div class="flex flex-col sm:flex-row gap-4 items-center justify-between">
            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="flex flex-col sm:flex-row gap-4 items-center w-full">
                <input type="file" name="excelFile" accept=".xlsx" 
                       class="block w-full text-sm text-gray-400 
                              file:mr-4 file:py-2.5 file:px-4 
                              file:rounded-lg file:border-0 
                              file:text-sm file:font-semibold 
                              file:bg-blue-600 file:text-white 
                              hover:file:bg-blue-700 
                              cursor-pointer bg-gray-900 rounded-lg border border-gray-600 focus:outline-none focus:border-blue-500 transition" 
                       required />
                
                <button type="submit" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg font-medium transition shadow-lg shadow-blue-900/20 whitespace-nowrap flex justify-center items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                    </svg>
                    Upload
                </button>
            </form>
            
            <button onclick="toggleModal('helpModal')" class="text-gray-400 hover:text-white transition flex items-center gap-1 text-sm font-medium whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Template Help
            </button>
        </div>
    </div>

    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden shadow-xl">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-900 text-gray-400 uppercase text-xs tracking-wider">
                    <tr>
                        <th class="px-6 py-4 font-semibold">Employee</th>
                        <th class="px-6 py-4 font-semibold">Job Title</th>
                        <th class="px-6 py-4 font-semibold">Department</th>
                        <th class="px-6 py-4 font-semibold">Salary</th>
                        <th class="px-6 py-4 text-center font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700 text-gray-300">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-700/50 transition duration-150">
                            <td class="px-6 py-4">
                                <div class="font-bold text-white text-sm">@item.Name</div>
                                <div class="text-xs text-gray-500">@item.Email</div>
                            </td>
                            <td class="px-6 py-4 text-sm">@item.JobTitle</td>
                            <td class="px-6 py-4">
                                <span class="px-2.5 py-1 bg-gray-700 rounded-md text-xs font-medium text-gray-300 border border-gray-600">
                                    @(item.Department?.Name ?? "N/A")
                                </span>
                            </td>
                            <td class="px-6 py-4 text-emerald-400 font-mono text-sm font-semibold">
                                @item.Salary.ToString("C0")
                            </td>
                            <td class="px-6 py-4 text-center flex items-center justify-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-300 transition">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                    <button type="submit" class="text-red-400 hover:text-red-300 transition">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </form>
                                <a asp-action="DownloadCv" asp-route-id="@item.Id" target="_blank"
                                   class="inline-flex items-center gap-1.5 bg-red-500/10 hover:bg-red-600 text-red-400 hover:text-white px-3 py-1.5 rounded-lg transition text-xs font-medium border border-red-500/20 hover:border-red-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    PDF CV
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="p-12 text-center text-gray-500 flex flex-col items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
                <p class="text-lg font-medium">No employees found.</p>
                <p class="text-sm">Upload an Excel file to get started.</p>
            </div>
        }
    </div>
</div>

<!-- Help Modal -->
<div id="helpModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50 backdrop-blur-sm">
    <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-2xl max-w-lg w-full p-6 transform transition-all scale-100">
        <div class="flex justify-between items-center mb-4 border-b border-gray-700 pb-4">
            <h3 class="text-xl font-bold text-white">Excel Template Guide</h3>
            <button onclick="toggleModal('helpModal')" class="text-gray-400 hover:text-white transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        
        <div class="space-y-4 text-gray-300">
            <p class="text-sm">Please ensure your Excel file (.xlsx) follows this exact column structure:</p>
            
            <div class="bg-gray-900 rounded-lg p-4 border border-gray-700 overflow-x-auto">
                <table class="w-full text-xs text-left">
                    <thead class="text-gray-500 uppercase">
                        <tr>
                            <th class="px-2 py-1">A</th>
                            <th class="px-2 py-1">B</th>
                            <th class="px-2 py-1">C</th>
                            <th class="px-2 py-1">D</th>
                            <th class="px-2 py-1">E</th>
                            <th class="px-2 py-1">F</th>
                        </tr>
                    </thead>
                    <tbody class="font-mono text-blue-400">
                        <tr>
                            <td class="px-2 py-1">Name</td>
                            <td class="px-2 py-1">Email</td>
                            <td class="px-2 py-1">JobTitle</td>
                            <td class="px-2 py-1">Salary</td>
                            <td class="px-2 py-1">Date</td>
                            <td class="px-2 py-1">Dept</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <ul class="list-disc list-inside text-sm space-y-1 text-gray-400">
                <li><strong class="text-white">Email</strong> is used as the unique key for updates.</li>
                <li><strong class="text-white">Dept</strong> should match the Department Name exactly.</li>
                <li><strong class="text-white">Date</strong> format: YYYY-MM-DD.</li>
            </ul>
        </div>

        <div class="mt-6 flex justify-end">
            <button onclick="toggleModal('helpModal')" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg font-medium transition">
                Got it
            </button>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        } else {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }
    }

    // SweetAlert Integration
    document.addEventListener('DOMContentLoaded', function() {
        @if (TempData["Success"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '@TempData["Success"]',
                background: '#1f2937',
                color: '#fff',
                confirmButtonColor: '#2563eb'
            });
            </text>
        }
        
        @if (TempData["Error"] != null)
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@TempData["Error"]',
                background: '#1f2937',
                color: '#fff',
                confirmButtonColor: '#dc2626'
            });
            </text>
        }
    });
</script>